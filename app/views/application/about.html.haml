-# -*- coding: utf-8 -*-
.yield
 .about
  - if logged?
   %h2= t(:settings)
   = raw(call_hook :global_setting_item)
  %h2= t(:versions)
  %table.version
   %tr
    %td.first= t(:application_name)
    %td= AsakusaSatellite::VERSION
   %tr
    %td.first= t(:ruby)
    %td= "#{RUBY_VERSION} (#{RUBY_PLATFORM})"
   %tr
    %td.first= t(:rails)
    %td= Rails::VERSION::STRING
   %tr
    %td.first= t(:mongodb)
    %td= Mongoid.default_client.command(buildInfo: 1).first[:version]
   %tr
    %td.first= t(:jquery)
    %td
     %span.jquery-version

= content_for :javascripts do
 :javascript
  $(function() {
   $(".jquery-version").text($.fn.jquery);
  });
